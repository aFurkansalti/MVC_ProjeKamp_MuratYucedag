<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Projects</h1>
                    </div>

                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Başlık İşlemleri</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 20%">
                                    Başlık Adı
                                </th>
                                <th style="width: 10%">
                                    Oluşturan Yazar
                                </th>
                                <th style="width: 10%">
                                    Durum
                                </th>
                                <th style="width: 8%" class="text-center">
                                    Kategori
                                </th>
                                <th style="width: 30%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Category.CategryName == "Gitar")
                                {
                                    color = "badge badge-success";
                                }
                                else if (item.Category.CategryName == "Yüzme")
                                {
                                    color = "badge badge-danger";
                                }
                                else if (item.Category.CategryName == "Bisiklet")
                                {
                                    color = "badge badge-dark";
                                }
                                else if (item.Category.CategryName == "İnşaat Mühendisliği")
                                {
                                    color = "badge badge-success";
                                }
                                else if (item.Category.CategryName == "Yemek")
                                {
                                    color = "badge badge-primary";
                                }
                                else if (item.Category.CategryName == "Kitap")
                                {
                                    color = "badge badge-primary";
                                }
                                else if (item.Category.CategryName == "Dizi")
                                {
                                    color = "badge badge-secondary";
                                }
                                else if (item.Category.CategryName == "Araba")
                                {
                                    color = "badge badge-warning";
                                }
                                else if (item.Category.CategryName == "Teknoloji")
                                {
                                    color = "badge badge-warning";
                                }
                                else if (item.Category.CategryName == "Yazılım")
                                {
                                    color = "badge badge-warning";
                                }

                                <tr>
                                    <td>
                                        @item.HeadingID
                                    </td>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br />
                                        <small>
                                            @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                        </small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        @if (item.HeadingStatus == true)
                                        {
                                            <label>Aktif</label> 
                                        }
                                        else
                                        {
                                            <label>Pasif</label>
                                        }
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                            <i class="fas fa-folder">
                                            </i>
                                            <p>Yazılar</p>
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            <p>Düzenle</p>
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                            <i class="fas fa-trash-alt">
                                            </i>
                                            @if (item.HeadingStatus == true)
                                            {
                                                <p>Pasif Yap</p>
                                            }
                                            else
                                            {
                                                <p>Aktif Yap</p>
                                            }
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>



    </div>

</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>
